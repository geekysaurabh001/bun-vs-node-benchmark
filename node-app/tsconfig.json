{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "outDir": "./dist",
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowJs": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["node-app/**/*.ts"]
}
